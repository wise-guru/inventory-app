extends layout

block content
  h1=title

  form(method='POST' action='')
    div.form-group
      label(for='game') Game:
      select#game.form-control(type='select' placeholder='Select game' name='game' required='true')
        - game_list.sort(function(a, b) {let textA = a.title.toUpperCase(); let textB = b.title.toUpperCase(); return (textA < textB) ? -1 : (textA > textB) ? 1 : 0;});
        for game in game_list
            if gameinstance
                option(value=game._id selected=(selected_game==game._id.toString() ? 'selected': false)) #{game.title}
            else
                option(value=game._id) #{game.title}

    //- div.form-group
    //-   label(for='imprint') Imprint:
    //-   input#imprint.form-control(type='text' placeholder='Publisher and date information' name='imprint' required='true' value=(undefined===gameinstance ? '' : gameinstance.imprint))

    //- div.form-group
    //-   label(for='due_back') Date when game available:
    //-   input#due_back.form-control(type='date' name='due_back' value=(undefined===gameinstance ? '' : gameinstance.due_back))

    div.form-group
      label(for='status') Status:
      select#status.form-control(type='select' placeholder='Select status' name='status' required='true')
        option(value='Available') Available
        option(value='Sold') Sold
        option(value='Layaway') Layaway

    button.btn.btn-primary(type='submit') Submit

  if errors
    ul
      for error in errors
        li!= error.msg
