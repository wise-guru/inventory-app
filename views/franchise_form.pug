extends layout

block content
  h1 #{title}

  form(method='POST' action='')
    div.form-group
      label(for='name') Franchise:
      input#name.form-control(type='text', placeholder='Legend of Zelda, FIFA, etc.' name='name' value=(undefined===franchise ? '' : franchise.name))
      if passcode
        label(for='passcode') Enter admin password:
        input#name.form-control.form-error(type='password', placeholder='Enter password' name='passcode')
        
        if passcodeError 
          div #{passcodeError}
    button.btn.btn-primary(type='submit') Submit

  if errors
   ul
    for error in errors
     li!= error.msg
