extends layout

block content
  div.list-container(class="gameinstance")
    h1= title
    h4 Copies: #{gameinstance_list.length}

    ul(type="1")
      each gameinstance in gameinstance_list
        li(style="padding-bottom: 8px")
          a(href=gameinstance.url) !{gameinstance.game.title}  (#{gameinstance._id}) - 
          if gameinstance.status=='Available'
            span.text-success #{gameinstance.status}
          else if gameinstance.status=='Sold'
            span.text-danger #{gameinstance.status}
          else
            span.text-warning #{gameinstance.status}

    div(class="gameinstances cards-container")
      each gameinstance in gameinstance_list 
        div(class="category-card")
          a(href=gameinstance.url)
            div(class="image-container")
              img(src= "/images/games/" + gameinstance.game.image)
            div
              div !{gameinstance.game.title}
              a(href=gameinstance.url) (#{gameinstance._id})
              if gameinstance.status=='Available'
                div.text-success #{gameinstance.status}
              else if gameinstance.status=='Sold'
                div.text-danger #{gameinstance.status}
              else
                div.text-warning #{gameinstance.status}
       

      else
        li There are no game copies in this inventory.
